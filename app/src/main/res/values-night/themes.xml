<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealEstateApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">@color/light_red_ripple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_background_variant</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Other colors-->
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <!-- Window -->
        <item name="android:windowBackground">@color/dark_background</item>
        <!-- Text -->
        <item name="android:textColor">@color/white</item>
        <!-- Bottom sheet dialog -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="MapToggleTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="MenuTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_hint_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AccountItem" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="drawableEndCompat">@drawable/ic_arrow</item>
        <item name="drawableTint">?attr/colorSecondary</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetBackground</item>
    </style>

    <style name="BottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_background_round</item>
    </style>
</resources>